generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./books.db"
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String   @default("sin titulo")
  year      Int
  publisher String
  image     String   @default("sin imagen")
  createAt  DateTime @default(now())
  author    Author @relation(fields: [authorId], references: [id])
  authorId  Int
  updateAt  DateTime @updatedAt 
}

model Author {
  id          Int      @id @default(autoincrement())
  firstname   String   
  lastname    String
  nationality String
  birthdate   DateTime
  createAt    DateTime @default(now())
  Book        Book[]   
  updateAt    DateTime @updatedAt
}

model User {
  id          Int       @id @default(autoincrement())
  firstname   String   
  lastname    String
  email       String    @unique // El campo "email" debe ser Ãºnico
  password    String
  active      DateTime
  createAt    DateTime  @default(now()) 
  updateAt    DateTime  @updatedAt
  Active      Boolean   @default(true)
}
